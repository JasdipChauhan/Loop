<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date_container"
        android:background="@color/colorPrimary"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATE"
            android:padding="8dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text"
            android:alpha="0.5"
            android:id="@+id/date_header"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ride_date"
            android:text="DATE"
            android:padding="8dp"
            android:textColor="@color/text"
            android:layout_below="@+id/date_header"
            android:layout_alignStart="@+id/date_header"
            />

    </RelativeLayout>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ride_drivers_name"
        android:text="Drivers NAME"
        android:padding="8dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ride_pickup"
        android:text="PICKUP"
        android:padding="8dp"
        android:layout_below="@id/ride_date"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ride_dropoff"
        android:text="DROPOFF"
        android:padding="8dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/ride_date"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ride_seats_left"
        android:text="SEATS LEFT"
        android:padding="8dp"
        android:layout_below="@id/ride_pickup"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ride_cost"
        android:text="COST"
        android:textColor="@color/moneyGreen"
        android:padding="8dp"
        android:layout_below="@+id/ride_pickup"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reserve_button"
        android:text="@string/reserve_ride_string"
        android:textColor="@color/white"
        android:background="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:padding="8dp"
        android:onClick="reserveButtonClicked"
        />


</RelativeLayout>