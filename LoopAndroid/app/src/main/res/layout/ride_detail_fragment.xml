<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                style="@style/detail_container"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="8dp"
                    android:src="@drawable/asset"/>

                <TextView
                    android:text="DATE"
                    android:id="@+id/date_header"
                    style="@style/detail_item_header"
                    />

                <TextView
                    android:id="@+id/ride_date"
                    android:text="DATE"
                    android:layout_below="@+id/date_header"
                    android:layout_alignStart="@+id/date_header"
                    style="@style/detail_item"
                    />

            </RelativeLayout>

            <RelativeLayout
                style="@style/detail_container"
                >

                <TextView
                    android:text="TIME"
                    android:id="@+id/time_header"
                    style="@style/detail_item_header"
                    />

                <TextView
                    android:id="@+id/ride_time"
                    android:text="TIME"
                    android:layout_below="@+id/time_header"
                    android:layout_alignStart="@+id/time_header"
                    style="@style/detail_item"
                    />

            </RelativeLayout>

            <RelativeLayout
                style="@style/detail_container"
                >

                <TextView
                    android:text="FROM"
                    android:id="@+id/pickup_header"
                    style="@style/detail_item_header"
                    />

                <TextView
                    android:id="@+id/ride_pickup"
                    android:text="PICKUP"
                    android:layout_below="@+id/pickup_header"
                    android:layout_alignStart="@+id/pickup_header"
                    style="@style/detail_item"
                    />

            </RelativeLayout>

            <RelativeLayout
                style="@style/detail_container"
                >

                <TextView
                    android:text="TO"
                    android:id="@+id/dropoff_header"
                    style="@style/detail_item_header"
                    />

                <TextView
                    android:id="@+id/ride_dropoff"
                    android:text="DROPOFF"
                    android:layout_below="@+id/dropoff_header"
                    android:layout_alignStart="@+id/dropoff_header"
                    style="@style/detail_item"
                    />

            </RelativeLayout>

            <RelativeLayout
                style="@style/detail_container"
                >

                <TextView
                    android:text="COLOUR &amp; MODEL"
                    android:id="@+id/car_header"
                    style="@style/detail_item_header"
                    />

                <TextView
                    android:id="@+id/ride_car"
                    android:text="CAR"
                    android:layout_below="@+id/car_header"
                    android:layout_alignStart="@+id/car_header"
                    style="@style/detail_item"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ride_drivers_name"
                android:text="Drivers NAME"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ride_seats_left"
                android:text="SEATS LEFT"
                android:padding="8dp"
                android:layout_below="@id/ride_pickup"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ride_cost"
                android:text="COST"
                android:textColor="@color/moneyGreen"
                android:padding="8dp"
                android:layout_below="@+id/ride_pickup"
                android:layout_alignParentRight="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/reserve_button"
                android:text="@string/reserve_ride_string"
                android:textColor="@color/white"
                android:background="@color/colorAccent"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"
                android:padding="8dp"
                android:onClick="reserveButtonClicked"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>